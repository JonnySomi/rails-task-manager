<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
    <%= "✅" %>
   <% else %>
   <%= "❌" %>
  <% end %>

  <p><%= link_to "Delete #{@task.title}",
            task_path(@task),
            method: :delete,
            data: { confirm: "Are you sure you want to delete this task?" } %></p>
  <p><%= link_to 'Tasks list', tasks_path %></p>
  <p><%= link_to 'Edit task', edit_task_path(@task) %></p>
